<div class="row">
  <h1>Add a New Character</h1>
</div>

 <%= form_for @character do |f| %>
  <div class= "row">
    <div class= "field columns small-6">
      <%= f.label :name %>
      <%= f.text_field :name && :db_name %>
    </div>
  </div>
  <br>
  <div class= "row">
    <div class= "field columns small-8">
  <%= f.label :description %>
  <%= f.text_area :description %>
    </div>
  </div>
  <br>
    <div class= "row">
  <%= f.submit "Add Character", class: "success button" %>
    </div>
 <% end %>
    <div class= "row">
<%= link_to "Back to home", root_path, class: "button" %>
  </div>
