<div class = "small-block-grid-1 medium-block-grid-3 large-block-grid-5 panel-log-in" >
  <div style="display:flex;justify-content:center;align-items:center;">
    <div class = "panel-reg">
      <h2>Sign up</h2>
    </div>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class= "row">
    <div class= "field columns small-5 medium-7 large-12">
    <%= f.label :email, :style => "color: #ead61c;" %><br />
    <%= f.email_field :email, autofocus: true %>
    </div>
  </div>

  <div class= "row">
    <div class= "field columns small-5 medium-7 large-12">
    <%= f.label :password, :style => "color: #ead61c;" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
    </div>
  </div>

  <div class= "row">
    <div class= "field columns small-5 medium-7 large-12">
    <%= f.label :password_confirmation, :style => "color: #ead61c;" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
  </div>

  <div class= "row">
    <div class= "field columns small-5 medium-7 large-12">

  <div class="actions">
    <%= f.submit "Sign up", class: "button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
    </div>
  </div>
