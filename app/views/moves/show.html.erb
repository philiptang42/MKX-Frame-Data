<% provide(:background, @character.db_name) %>
<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<div style="display:flex;align-items:left;">
  <%= link_to character_path(@character), :class =>"hvr-bounce-in" do %>
    <i class="fa fa-arrow-circle-left fa-2x" style="padding-top: 10px;padding-left: 6px;color: yellow;"></i>
  <% end %>
</div>
<div style="display:flex;justify-content:center;align-items:center;">
  <div class="panelzz">
    <div class="panel">
      <h1><%=@move.name %></h1>
    </div>
  </div>
</div>
<%= video_tag(["https://s3.amazonaws.com/alot/mkx-clips/#{@move.db_name}.mp4"], :controls => true) %>

<div style="display:flex;justify-content:center;align-items:center;">
  <div class="panel">
    <h2>Comments</h2>
  </div>
</div>

<%- if current_user -%>
  <div class="new-comment">
    <button data-remote="true" class="button radius button-new-form">
    Submit Your Review</button>
    <div class="hide-comment-form">
     <%= form_for [@character, @move, @comment] do |f| %>
    <div class="left-column">
      <div class="field rows small-8">
      <%= f.label :body %>
      <%= f.text_area :body %>
      </div>
    </div>
      <div class="small-block-grid-2">
        <div class="left columns small-2">
        <%= f.label :rating %>
        <%= f.select :rating, options_from_collection_for_select([1, 2, 3, 4, 5], "to_s", "to_s") %>
        </div>
      </div>
      <div class="left">
      <%= f.submit "Submit Comment", class: "success button", id: "submit-review-button"%>
      </div>
    </div>
    <br>
  </div>
     <% end %>

  <%- else -%>
    <span>
      <%= link_to 'Submit Your Comment', new_user_session_path,
      class: "button radius" %>
    </span>
  <%- end -%>

  <% @comments.each do |c| %>
  Written by <%= current_user.email %> @ <%= c.created_at %>
  <%= c.rating %>
  <%= c.body %>
  <% end %>
